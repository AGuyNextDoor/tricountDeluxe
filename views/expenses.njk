{% extends "template_logged.njk" %}

{% block title %}
Expenses
{% endblock %}

{% block content %}

<h1 class="ml-2 mt-4"> Hello {{user.username}} </h1>
<div class="row d-flex justify-content-between mr-3 pb-3">
  <h3 class="ml-4">Here are the expenses for your activity<h3>

    <a class="btn btn-primary" href="/accounts" role="button"><i class="fas fa-credit-card"></i> See accounts</a>
    <a class="btn btn-primary" href="/addexpense" role="button"><i class="fas fa-plus"></i> Add expense</a>

  </div>

  <div id="graph">

    <canvas id="myChart" width="400" height="400"></canvas>
  </div>



  <ul class="list-unstyled mt-4">
    {% for element in test %}
    <li>

      <div class="row d-flex justify-content-between">
        <div class="ml-2">
          <h6>{{element.date}} | {{element.name_transaction}}</h6>
          <b>Amount:</b> {{element.sum/100}} â‚¬<br>
          <b>Paid by :</b> {{element.nom_user}}

        </div>

        <div><a class="btn btn-outline-primary ml-auto mr-2" href="#" role="button"><i class="fas fa-pencil-alt"></i></a>
          <a class="btn btn-outline-primary mr-2" href="#" role="button"><i class="far fa-trash-alt"></i></a>
        </div>


        </li>
        {% endfor %}
      </ul>

      {% endblock %}

      {% block cascadeTitle %}
      {{user.username}}
      {% endblock %}

