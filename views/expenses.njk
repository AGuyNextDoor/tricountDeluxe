      <script>
      let graphDataArray=[{{graph_data}}];
      var ctx = document.getElementById("myChart");
      let tabresult = graphDataArray ;
    


      let labelsArray=[
        {% for label in graph_labels %}
          "{{label}}",
        {% endfor %}
      ];


      let end_array= [];
      // startArray.forEach(element => end_array.push(element.toString()));
      //let startArray = [for elements in {{graph_labels}}];

      // for (let i = 0; i < 2; i++) {
      //   end_array.push(startArray[i]);
      //   console.log("alzkejlazkejlazkej \n",startArray);
      // }
      //let myNewArray =  startArray.map(element => element.toString());

      var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: labelsArray,
          datasets: [{
            label: 'Expenses repartition for the activity',
            data: tabresult,
            backgroundColor: [
              'rgba(255, 99, 132, 0.2)',
              'rgba(54, 162, 235, 0.2)',
              'rgba(255, 206, 86, 0.2)',
              'rgba(75, 192, 192, 0.2)',
              'rgba(153, 102, 255, 0.2)',
              'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
              'rgba(255,99,132,1)',
              'rgba(54, 162, 235, 1)',
              'rgba(255, 206, 86, 1)',
              'rgba(75, 192, 192, 1)',
              'rgba(153, 102, 255, 1)',
              'rgba(255, 159, 64, 1)'
